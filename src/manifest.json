{
  "manifest_version": 3,
  "name": "Neel's Solana Wallet",
  "version": "1.0.2",
  "description": "Elegant Solana wallet for managing your SOL and tokens with send, receive, swap features",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://api.mainnet-beta.solana.com/*",
    "https://api.devnet.solana.com/*",
    "https://api.testnet.solana.com/*",
    "https://quote-api.jup.ag/*",
    "https://api.jup.ag/*",
    "https://api.coingecko.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "env": {
    "JUP_API_KEY": "your-jup-api-key-here"
  }
}